<Window x:Class="WPFSystemprogramming1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSystemprogramming1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="520">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Запустить Notepad" Click="LaunchNotepad_Click" />
            <Button Content="Обновить текстовое поле" Click="UpdateTextBox_Click" />
            <TextBlock x:Name="MessageText" FontSize="16" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
